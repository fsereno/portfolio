            a-text(position='0 0 0' value="Time: " color="green" width="2")
              a-text(id="timer" position='0.23 0 0' value="0" color="green" width="2")
          a-entity(
            navigate-component=''
            position='0 0 -2' 
            geometry='primitive: ring; radiusInner: 0.2; radiusOuter: 0.3;' 
