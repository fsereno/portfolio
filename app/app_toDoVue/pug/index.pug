extends ../../pug/layouts/main.pug

block styles
  // build:css css/styles.css
  link(rel="stylesheet" href="css/styles.css")
  // endbuild

block content
    div#result
      .row.splitter
        .col-lg-4
              h3 Result:
              ul.list-group
                li(class="list-group-item d-flex justify-content-between align-items-center", v-for="item in items")
                  span {{ item }}
                  a(href="#", class="badge badge-danger delete", v-on:click="deleteItem") Delete
      .row.splitter
        .col-lg-12
          p Items: 
            span {{ counter}}
          p Item to add: 
            span {{ name }}
      .row
        .col-lg-3
          form#inputForm(autoComplete="off")
            .form-group
              label(for="input") Input:
              input#input.form-control(
                name="input",
                type="text",
                placeholder="Add to list...",
                required,
                v-model="name")

            button#submit.btn.btn-primary(type="button", v-on:click="addItem") Add item

block scripts
  // build:js js/app.js
  script(src="js/app.js")
  // endbuild