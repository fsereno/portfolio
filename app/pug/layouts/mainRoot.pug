doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title Portfolio
    meta(name="description" content="Portfolio")
    meta(name='viewport', content='width=device-width, initial-scale=1, minimal-ui')
    include ../includes/_metaAuthor.pug
    // build:css css/vendor.css
    include ../includes/_styleDeps.pug
    // endbuild
    block styles
  body
    include ../includes/_navigation.pug
    #introContainer.bg-dark.py-5.mt-5
      .text-center.element
        img(alt='Logo' src='images/FSLogo.png')
      .text-center.element
        h1.display-4.mb-0=locals.config.author
      .text-center.element
        h4.display-4.sub-heading.lead=locals.config.role
      .text-center.element.mt-5
        button#introBtn.btn.btn-white.btn-lg View Portfolio
    #mainContainer.container-fluid.pt-4
      .row
        .col-lg-12
          h2.display-4= locals.application.name
      .row
        .col-lg-12
          h5=locals.application.subHeading
          p.text-muted= locals.application.description
          hr
      block content
      block footer
    include ../includes/_footer.pug
    // build:js js/vendor.js
    include ../includes/_jsDeps.pug
    // endbuild
    block scripts