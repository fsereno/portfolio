doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    title Portfolio
    meta(name="description" content="Portfolio")
    meta(name='viewport', content='width=device-width, initial-scale=1, minimal-ui')
    include ../includes/_metaAuthor.pug
    // build:css ../css/vendor.css
    include ../includes/_styleDeps.pug
    // endbuild
    block styles
  body
    include ../includes/_navigation.pug
    #mainContainer.container-fluid.pt-4.mt-5
      .row
        .col-lg-12
          h2#pageHeading.display-4= locals.application.name
      .row
        .col-lg-12
          h5#pageSubHeading=locals.application.subHeading
          p#pageDescription.text-muted= locals.application.description
          hr
      block content
      block footer
    include ../includes/_footer.pug
    // build:js ../js/vendor.js
    include ../includes/_jsDeps.pug
    // endbuild
    block scripts