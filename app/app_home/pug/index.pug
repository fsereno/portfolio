extends ../../pug/layouts/main.pug

block styles
  // build:css css/styles.css
  link(rel="stylesheet" href="css/styles.css")
  // endbuild

block content
  .container-fluid
      h1.display-1= locals.application.name
      h4
        | Applications
      ul
        each application, index in locals.appConfig.applications
          if application.folder !== locals.appConfig.entry && application.folder !== locals.appConfig.masterTemplateDir
            li
              a(href="../"+locals.appConfig.prefix+application.folder+"/index.html")= application.name     
block scripts
  // build:js js/app.js
  script(src="js/app.js")
  // endbuild
  // build:js js/vendor.js
  // endbuild