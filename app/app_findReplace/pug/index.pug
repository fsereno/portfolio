block content
      h1.display-1= locals.application.name
      .row
        .col-lg-12
          p.lead#textToReplace Hello world!
      .row
        .col-lg-3
          form#findReplaceForm
            .form-group
              label(for='findInput') Find this:
              input#findInput.form-control(name="findInput", type='text', placeholder='Find...', required)
            .form-group
              label(for='replaceInput') Replace with:
              input#replaceInput.form-control(name="replaceInput", type='text', placeholder='Replace with...', required)
             
            button.btn.btn-primary(type='submit') Submit

block scripts
